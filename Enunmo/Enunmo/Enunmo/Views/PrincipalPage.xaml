<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Enunmo.Views.PrincipalPage"
            BindingContext="{Binding Main, Source={StaticResource Locator}}"
            Title="Menú Principal!">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Menú" 
                 Icon="menu_icon">
        <ScrollView>
            <StackLayout
                BindingContext="{Binding Principal}">
                <Label
                    Text="HAMBURGUESAS EN UN MOMENTICO"
                    HorizontalOptions="CenterAndExpand"
                    FontSize="Large"
                    BackgroundColor="OrangeRed"
                    TextColor="White"
                    FontAttributes="Bold"
                    Margin="5"
                    HorizontalTextAlignment="Center">
                </Label>
                <Grid
                    HorizontalOptions="CenterAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="120"/>                        
                    </Grid.ColumnDefinitions>
                    <Label
                        Text="De Carne"
                        TextColor="White"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        FontAttributes="Bold"
                        BackgroundColor="Black"
                        Margin="3">
                    </Label>
                    <Image
                        Source="hb_carne"
                        Margin="3"
                        Grid.Row="1"
                        Grid.Column="0">
                    </Image>
                    
                    <Button
                        Grid.Row="2"
                        Grid.Column="0"
                        BackgroundColor="OrangeRed"
                        BorderRadius="10"
                        TextColor="White"
                        VerticalOptions="CenterAndExpand"
                        Text="$6.900"
                        FontAttributes="Bold"
                        IsEnabled="{Binding IsEnabled, Mode=TwoWay}">
                    </Button>
                        
                    <Image
                        Source="hb_carne"
                        Margin="3"
                        Grid.Row="1"
                        Grid.Column="2">
                    </Image>
                    <Label
                        Text="Combo Carne"
                        TextColor="White"
                        FontAttributes="Bold"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="2"
                        Margin="3"
                        BackgroundColor="Black">

                    </Label>
                    <Button
                        Grid.Row="2"
                        Grid.Column="1"                        
                        BackgroundColor="OrangeRed"
                        BorderRadius="10"
                        TextColor="White"
                        VerticalOptions="CenterAndExpand"
                        Text="$4.900"
                        FontAttributes="Bold"
                        IsEnabled="{Binding IsEnabled, Mode=TwoWay}">
                    </Button>
                    <Image
                        Source="hb_pollo"
                        Margin="3"                        
