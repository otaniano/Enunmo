                        Grid.Column="2"                        
                        BackgroundColor="OrangeRed"
                        BorderRadius="10"
                        TextColor="White"
                        VerticalOptions="CenterAndExpand"
                        Text="$8.500"
                        FontAttributes="Bold"
                        IsEnabled="{Binding IsEnabled, Mode=TwoWay}">
                    </Button>
                    <Label
                        Text="Combo Pollo"
                        TextColor="White"
                        VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        Grid.Row="3"
                        Grid.Column="0"
                        FontAttributes="Bold"
                        BackgroundColor="Black"
                        Margin="3">
                    </Label>
                    <Image
                        Source="hb_pollo"
                        Margin="3"
                        Grid.Row="4"
                        Grid.Column="0">
                    </Image>

                    <Button
                        Grid.Row="5"
                        Grid.Column="0"
                        BackgroundColor="OrangeRed"
                        BorderRadius="10"
                        TextColor="White"
                        VerticalOptions="CenterAndExpand"
