            </StackLayout>

        </ScrollView>
        
    </ContentPage>

    <ContentPage Title="Caja"
                 Icon="caja_icon">
        <StackLayout>
            <Label
                Text="Caja en un momentico">
            </Label>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="WhatsApp"
                 Icon="whatsapp_icon">
        <StackLayout>
            <Label
                Text="WhatsApp en un momentico">
            </Label>
        </StackLayout>
    </ContentPage>
